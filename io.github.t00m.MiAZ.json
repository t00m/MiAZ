{
    "app-id" : "io.github.t00m.MiAZ",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "miaz",
    "finish-args" : [
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--allow=bluetooth",
        "--socket=cups",
        "--socket=gpg-agent",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--filesystem=host"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libpeas",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dlua51=false",
                "-Dpython3=true"
            ],
            "cleanup" : [
                "/bin/*",
                "/lib/peas-demo",
                "/lib/libpeas-gtk*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpeas.git",
                    "tag": "1.36",
                    "commit": "7f245fa5158204621c3469756a951b68a651c4fe"
                }
            ]
        },
        {
            "name" : "miaz",
            "builddir" : true,
            "buildsystem" : "meson",
            "build-commands": [
                "python -m pip install --prefix=/app .."
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/t00m/MiAZ.git",
                    "branch": "main"
                }
            ]
        }
    ]
}
